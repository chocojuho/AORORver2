    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://ifh.cc/g/zw6XfW.png" class="d-block w-100" alt="...">
